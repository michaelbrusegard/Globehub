{
  "name": "globe-hub",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "postbuild": "next-sitemap",
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "db:start": "docker-compose up -d db",
    "db:stop": "docker-compose stop db",
    "db:seed": "bun run db/seed.ts",
    "db:reset": "bun run db/reset.ts",
    "db:logs": "docker-compose logs -f db",
    "s3:start": "docker-compose up -d s3",
    "s3:stop": "docker-compose stop s3",
    "s3:logs": "docker-compose logs -f s3",
    "app:start": "docker-compose up -d app",
    "app:stop": "docker-compose stop app",
    "app:logs": "docker-compose logs -f app",
    "docker:start": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "lint-staged": {
    "*.{js,cjs,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
